<Window x:Class="Wpf_Lesson3._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Lesson3._2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <Canvas Background="Red">
            <Button 
                Name ="Cancel_btn"
                Canvas.Top="0"
                Canvas.Right="0"
                Height="30"
                Width="30"
                MouseEnter="CancelBtn_MouseEnter"
                MouseLeave="CancelBtn_MouseLeave"
                Click="CancelBtn_Click"
                >
                <Image Name="cancel_image" Source="Images\Cancel.png"></Image>
            </Button>
        </Canvas>
    </Grid>
</Window>
